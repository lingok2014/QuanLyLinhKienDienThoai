@model IEnumerable<QuanLyLinhKienDienThoai.Models.SANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
<h2>Danh sách  sản phẩm</h2>
@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @TempData["Message"]
    </div>
}

<p>
    <a href="@Url.Action("Create","SanPham")" class="btn btn-info btn-sm">
        <span class="glyphicon glyphicon-plus"></span><span class="hidden-xs"> Thêm</span>
    </a>
</p>
<table id="dsdinhdang" class="table table-condensed table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TENSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MATHUONGHIEU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MALOAISP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GIA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.THONGTIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SOLUONG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HINHANH)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TENSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MATHUONGHIEU)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MALOAISP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GIA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTIN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SOLUONG)
                </td>
                <td>
                    <img src="@Url.Content("~/Content/Image/"+item.HINHANH)" alt="cover page" width="45" />
                </td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Edit", new { id = item.MASP })" class="btn btn-warning btn-sm margin-right">
                            <span class="glyphicon glyphicon-edit"></span><span class="hidden-xs"> Sửa</span>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.MASP })" class="btn btn-danger btn-sm">
                            <span class="glyphicon glyphicon-trash"></span><span class="hidden-xs"> Xóa</span>
                        </a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>
